---
layout: base
pageType: blog
---

{% set postListItems = pagination.items %}

{%- if tag -%}
  {% set postListItems = collections[tag] %} 
{%- endif -%}

{%- if category -%}
  {% set postListItems = category.items %}
{%- endif -%}

{% block content %}
<section class="l--wrapper markdown--block">
  <aside>
    {%- include "partials/micro/cat-tags.njk" -%}
  </aside>
  <div>
    {%- include "partials/micro/post-list.njk" -%}
    {% if tag or category %}
    <a class="button" aria-label="back to the journal listing page" href="/news/">{% icon "fas:caret-left" %}All Posts</a>
    {% endif %}
    {%- if not tag and not category -%}
    {% include "partials/micro/pagination.njk" %}
    {%- endif -%}
  </div>
</section>
{% endblock %}